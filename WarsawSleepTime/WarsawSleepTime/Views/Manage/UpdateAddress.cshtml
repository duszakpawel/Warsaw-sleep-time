@model WarsawSleepTime.Models.Models.ManageModels.UpdateAddressModel
@{
    ViewBag.Title = "Warsaw Sleep Time - Update Address";
}


<p class="text-success">@ViewBag.StatusMessage</p>
<div class="jumbotron highlight-dark keep-top-reason-big">
    <p class="big white-subtitle">Change your address informations.</p>
    <hr/>
    @using (Html.BeginForm("UpdateAddress", "Manage", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new {@class = "text-danger"})
        <div class="form-group white-subtitle">
            @Html.LabelFor(m => m.City, new {@class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.City, new {@class = "form-control", Value = Model.City})
            </div>
        </div>
        <div class="form-group white-subtitle">
            @Html.LabelFor(m => m.Country, new {@class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Country, new {@class = "form-control", Value = Model.Country})
            </div>
        </div>
        <div class="form-group white-subtitle">
            @Html.LabelFor(m => m.Number, new {@class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Number, new {@class = "form-control", Value = Model.Number})
            </div>
        </div>
        <div class="form-group white-subtitle">
            @Html.LabelFor(m => m.Street, new {@class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Street, new {@class = "form-control", Value = Model.Street})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Update address"/>
            </div>
        </div>
        <div>
            @Html.ActionLink("Update your profile", "Update", "Manage", new {area = ""}, new {@class = "btn btn-success"})
            @Html.ActionLink("Update your preferences", "UpdatePreferences", "Manage", new {area = ""}, new {@class = "btn btn-success"})
            @Html.ActionLink("Change password", "ChangePassword", "Manage", new {area = ""}, new {@class = "btn btn-success"})
        </div>
    }
</div>

