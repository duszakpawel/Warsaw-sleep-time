@model WarsawSleepTime.Models.Models.OffersModels.AddOfferModel
@{
    ViewBag.Title = "Warsaw Sleep Time - Add new offer";
}
<div class="highlight-dark keep-top-reason-big">
    @using (Html.BeginForm("AddOffer", "Offers", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-12">
            <br />
            <h2 class="page-header top-margin white-subtitle">Add new offer</h2>
            <br />
        </div>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label white-subtitle" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Street, new { @class = "col-md-2 control-label white-subtitle" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Street, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Number, new {@class = "col-md-2 control-label white-subtitle"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Number, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group white-subtitle">
            @Html.LabelFor(m => m.Date, new { @class = "col-md-2 control-label" })
            <div class="col-md-10 form-group-sm">
                @Html.TextBoxFor(x => x.Date, "{0:yyyy-MM-dd}", new { @class = "form-control", Value = DateTime.Today.ToString("yyyy-MM-dd") })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-success" value="Add offer" />
            </div>
        </div>
        <br />
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


